#include <GL/glut.h>

void display();
int MainWindow;
GLuint someline;
GLuint manylines;

int main(int argc, char *argv[])
{
	glutInit(&argc, argv);
	glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
	glutInitWindowSize(300, 300);
	glutInitWindowPosition(100, 100);

	MainWindow = glutCreateWindow("Hello Graphics!!");
	glClearColor(0, 0, 0, 0);
	glutDisplayFunc(display);

	//here we compile a display list
	someline = glGenLists(1);
	glNewList(someline, GL_COMPILE);
		glBegin(GL_LINES);
		glVertex2f(30, 30);
		glVertex2f(50, 50);
		glEnd();
	glEndList();

	//here's another list
	manylines = glGenLists(1);
	glNewList(manylines, GL_COMPILE);
		glPushMatrix();
		glColor3f(1, 1, 1);
		glTranslatef(0, 20, 0);
		glCallList(someline);
		//glPopMatrix();

		glPushMatrix();
		glColor3f(1, 0, 0);
		glTranslatef(0, 20, 0);
		glCallList(someline);
		glPopMatrix();
	glEndList();

	glutMainLoop();
	return 0;
}


void display()
{
	glClear(GL_COLOR_BUFFER_BIT);
	glLoadIdentity();
	gluOrtho2D(0, 100, 0, 100);
	
	glCallList(manylines);
	glFlush();
}
